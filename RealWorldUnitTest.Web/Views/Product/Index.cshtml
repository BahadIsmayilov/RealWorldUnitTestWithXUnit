@model IEnumerable<Product>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <div class="container-fluid">
                    <div class="row" style="margin: 30px 0;">
                        <div class="col-12">
                            <a asp-action="Create" class="btn btn-primary btn-block">
                                <i class="fas fa-plus"></i> Create New Product
                            </a>
                        </div>
                    </div>
                </div>

                <table class="table table-bordered table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Color</th>
                            <th>Stock</th>
                            <th>Price</th>
                            <th>UpdateDate</th>
                            <th>Tools</th>
                        </tr>
                    </thead>
                     @foreach(var item in @Model)
                            {
                    <tbody>
                        <tr>
                           
                                <td>
                                    @item.Name
                                </td>
                                 <td>
                                    @item.Color
                                </td>
                                 <td>
                                    @item.Stock
                                </td>
                                 <td>
                                    @item.Price
                                </td>
                                 <td>
                                    @item.UpdateDate
                                </td>

                                <td style="vertical-align:middle; text-align:center;">
                                    <a title="See Details" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="fas fa-eye"></i></a>
                                    <a title="Edit AboutUsPreference" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-pencil"></i></a>
                                    @if (@Model.Count() > 1)
                                    {
                                        <a title="Delete AboutUsPreference" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash-o"></i></a>
                                    }
                                </td>
                        </tr>
                    </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>